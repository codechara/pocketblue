ARG from
FROM $from

COPY etc/ /etc/
COPY usr/ /usr/

RUN mkdir -p /boot/dtb && \
    dnf -y remove \
        kernel \
        kernel-core \
        kernel-modules \
        kernel-modules-core && \
    dnf -y install \
        kernel \
        xiaomi-nabu-firmware \
        xiaomi-nabu-audio \
        qbootctl \
        btop && \
    systemctl enable qbootctl.service && \
    dnf clean all && \
    bootc container lint
