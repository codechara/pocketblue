#!/usr/bin/env bash

set -uexo pipefail

export device=@device@
# export device=enchilada # for oneplus6
# export device=fajita    # for oneplus6t

[[ $device == enchilada || $device == fajita ]]

which fastboot

fastboot getvar product 2>&1 | grep 'sdm845'
fastboot erase dtbo_ab
fastboot flash boot_ab  images/uboot-$device.img
fastboot flash system_a boot.raw
fastboot flash system_b esp.raw
fastboot flash userdata root.raw

echo 'done flashing, rebooting now'
fastboot reboot
